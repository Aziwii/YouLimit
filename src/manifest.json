{
  "manifest_version": 3,
  "name": "YouLimit",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "permissions": [
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules/rules.json"
    }]
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["scripts/content.js"],
    "css": ["styles/content.css"]
  }],
  "action": {
    "default_title": "YouLimit",
    "default_popup": "popup.html"
  }
}
